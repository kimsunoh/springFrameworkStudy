	</bean>

	<bean id="ma" class="com.kitri.aop.step06.advice.MultiAdvice"/>
	<aop:config>
		<aop:aspect id="maspect" ref="ma">
			<aop:pointcut id="mpoint" expression="execution(public * com.kitri..*DaoImpl.*(..))*"/>
			<aop:around method="trace" pointcut-ref="mpoint"/>
			<aop:before method="userCheck" pointcut-ref="mpoint"/>
			<aop:after-returning method="history" pointcut-ref="mpoint"/>
			<aop:after-throwing method="exectionInfo" pointcut-ref="mpoint"/>
			<aop:after method=""/>
		</aop:aspect>
	</aop:config>
