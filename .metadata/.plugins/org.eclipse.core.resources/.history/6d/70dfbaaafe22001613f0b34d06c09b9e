<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript" src="/ajaxtest/js/httpRequest.js"></script>
<script type="text/javascript">
function sendParam() {
	var p = document.getElementById("name").value;
	var params = "name=" + encodeURIComponent(p);
	sendRequest("/ajaxtest/param", params, receiveParam, "GET");
}

function receiveParam() {
	if(httpRequest.readyState == 4) {
		if(httpRequest.status == 200) {
			var vi = document.getElementById("viewinfo");
			var info = httpRequest.responseText;
			vi.innerHTML = info;
		} else {
			alert("문제발생!!! : " + httpRequest.status);
		}
	} else {
		vt.innerHTML = "<img src='/ajaxtest/img/loading.gif' width='80'>";
	}	
}
</script>
</head>
<body>
<center>
<h3>ajax를 이용한 파라미터전송</h3>
<form name="para" method="get" action="">
<input type="text" name="name" id="name">
<input type="button" value="전송" onclick="javascript:sendParam();">
</form>
<div id="viewinfo"></div>
</center>
</body>
