<%
	MemberDto memberDto = (MemberDto) session.getAttribute("userInfo");
	Cookie cookie[] = request.getCookies();
	String ckpopup = "onload=\"javascript:openpop();\"";
	
	if(cookie != null) {
		int len = cookie.length;
		for(int i=0 ; i<len ; i++) {
			if("ad".equals(cookie[i].getName())){
				ckpopup = "";
				break;
			}
		}
	}
%>
