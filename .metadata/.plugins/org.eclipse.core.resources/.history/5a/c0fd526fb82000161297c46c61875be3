<title>Insert title here</title>
<script type="text/javascript">
	function openpop(){
		window.open("${pageContext.request.getContextPath}/member?act=pop1","pop1","top=200, left=300, width=1100, height=700, menubar=no, status=no, toolbar=no, location=no, scrollbars=yes");
	}
</script>
</head>
<body <%=ckpopup %>>
	<h3>JSP를 이용한 회원가입 & 로그인</h3>
<%if(memberDto == null){ %>
	<a href="${pageContext.request.getContextPath}/member?act=mvjoin">회원가입</a>
	<a href="${pageContext.request.getContextPath}/member?act=mvlogin">로그인</a>
<%}else { %>
	<a href="${pageContext.request.getContextPath}/member?act=mail">메일보기</a>
	<a href="${pageContext.request.getContextPath}/member?act=logout">로그아웃</a>
<%} %>
